<div class="row wrapper">
  <div class="col-md-6 ">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <input class="form-input" type="text" id="email-login" placeholder="email" />
        <i class='bx bxs-user'></i>
      </div>
      <div class="form-group">
        <input class="form-input" type="password" id="password-login" placeholder="password" />
        <span toggle="#password-login" class="bx bxs-show toggle-password"></span>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <input class="form-input" type="text" id="name-signup" placeholder="name" />
        <i class='bx bxs-user'></i>
      </div>
      <div class="form-group">
        <input class="form-input" type="text" id="email-signup" placeholder="email"/>
        <i class='bx bxs-envelope'></i>
      </div>
      <div class="form-group">
        <input class="form-input" type="password" id="password-signup" placeholder="password" />
        <span toggle="#password-signup" class="bx bxs-show toggle-password"></span>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script> 
